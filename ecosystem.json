{
  "apps": [
    {
      "name": "App",
      "script": "app.js",
      "exec_mode": "cluster",
      "instances": "max",
      "env_development": {
        "NODE_ENV": "development",
        "PORT": "3001"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "semaphoreci",
      "host": "146.185.163.147",
      "ref": "origin/master",
      "repo": "git@github.com:carlosvillu-com/CI.git",
      "path": "/var/www/production",
      "post-deploy": "npm i && pm2 startOrGracefulReload ecosystem.json --env production",
      "forward-agent": "yes"
    },
    "development" : {
      "user" : "semaphoreci",
      "host" : "146.185.163.147",
      "ref"  : "origin/master",
      "repo" : "git@github.com:carlosvillu-com/CI.git",
      "path" : "/var/www/development",
      "post-deploy" : "pm2 startOrRestart ecosystem.json --env development",
    }
  }
}
